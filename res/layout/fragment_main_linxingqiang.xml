<RelativeLayout
    android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:focusable="false"
	>
    <TextView 
        android:id="@+id/Head"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/luntan"
        android:textSize="30dp"
        android:layout_height="@dimen/main_height"
        android:layout_width="fill_parent"
        android:background="#99FF99"
        android:focusable="false"
        android:layout_alignParentTop="true"
        />
    <Spinner 
        android:id="@+id/action_bar"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/main_height"
        android:layout_width="@dimen/main_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shuoshuo"
        android:visibility="visible"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="3dp"
        android:prompt="@drawable/ic_launcher" 
        />
    <TextView 
        android:background="#FFFFFF"
        android:layout_width="1dp"
        android:layout_height="@dimen/main_height"
        android:layout_toLeftOf="@id/action_bar"
        />
    <ImageView 
        android:id="@+id/back"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/main_height"
        android:layout_width="@dimen/main_height"
        android:background="#99FF99"
        android:src="@drawable/arrow_left2x"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:background="#FFFFFF"
        android:layout_width="1dp"
        android:layout_height="@dimen/main_height"
        android:layout_toRightOf="@id/back"
        />
    <me.maxwin.view.XListView 
        android:id="@+id/xListView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/Head"
        ></me.maxwin.view.XListView>

</RelativeLayout>
